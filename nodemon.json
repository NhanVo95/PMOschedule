{
  "restartable": "rs",
  "ignore": [
    "./node_modules",
    "*.pug",
    "./public",
    "./mongodb",
    "debug.log",
    "./redis"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "echo \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\""
  },
  "ext": "js,json"
}
